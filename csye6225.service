[Unit]
Description=CSYE 6225 index.js
ConditionPathExists=/opt/web-app/index.js
After=network.target

[Service]
Type=simple
User=csye6225
Group=csye6225
WorkingDirectory=/opt/web-app
ExecStartPre=/bin/bash -c 'while [ ! -f /opt/web-app/.env ]; do sleep 1; done'
ExecStart=/usr/bin/node /opt/web-app/index.js
Restart=always
RestartSec=3
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=csye6225

[Install]
WantedBy=multi-user.target

